<?xml version="1.0"?>
<rdf:RDF xmlns="http://www.example.org/camouflage#"
     xml:base="http://www.example.org/camouflage"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#">
    
    <owl:Ontology rdf:about="http://www.example.org/camouflage">
        <rdfs:comment>Restructured OWL Ontology for Camouflage Detection - V2</rdfs:comment>
        <rdfs:label>Camouflage Detection Ontology V2</rdfs:label>
    </owl:Ontology>

    <!-- ========================================== -->
    <!--                 CLASSES                    -->
    <!-- ========================================== -->
    
    <!-- Organism: The living creature being observed -->
    <owl:Class rdf:about="http://www.example.org/camouflage#Organism">
        <rdfs:label>Organism</rdfs:label>
        <rdfs:comment>A living entity that may exhibit camouflage in various environments</rdfs:comment>
    </owl:Class>

    <!-- Environment: The habitat/background where camouflage is evaluated -->
    <owl:Class rdf:about="http://www.example.org/camouflage#Environment">
        <rdfs:label>Environment</rdfs:label>
        <rdfs:comment>Physical surroundings where organism is observed - holds camouflage effectiveness metrics</rdfs:comment>
    </owl:Class>

    <!-- Color: Shared color property (connects both organism and environment) -->
    <owl:Class rdf:about="http://www.example.org/camouflage#Color">
        <rdfs:label>Color</rdfs:label>
        <rdfs:comment>Color property that can be shared between organism and environment</rdfs:comment>
    </owl:Class>

    <!-- Texture: Shared texture property -->
    <owl:Class rdf:about="http://www.example.org/camouflage#Texture">
        <rdfs:label>Texture</rdfs:label>
        <rdfs:comment>Texture property that can be shared between organism and environment</rdfs:comment>
    </owl:Class>

    <!-- Pattern: Visual pattern on organism -->
    <owl:Class rdf:about="http://www.example.org/camouflage#Pattern">
        <rdfs:label>Pattern</rdfs:label>
        <rdfs:comment>Body pattern like disruptive, spotted, striped</rdfs:comment>
    </owl:Class>

    <!-- ObservationContext: Represents a specific organism-environment pairing -->
    <owl:Class rdf:about="http://www.example.org/camouflage#ObservationContext">
        <rdfs:label>ObservationContext</rdfs:label>
        <rdfs:comment>Context linking a specific organism to a specific environment instance</rdfs:comment>
    </owl:Class>

    <!-- CamouflageAssessment: The camouflage evaluation (connected to environment) -->
    <owl:Class rdf:about="http://www.example.org/camouflage#CamouflageAssessment">
        <rdfs:label>CamouflageAssessment</rdfs:label>
        <rdfs:comment>Camouflage effectiveness evaluation for organism in specific environment</rdfs:comment>
    </owl:Class>

    <!-- SimilarityMetric: Quantitative measurements -->
    <owl:Class rdf:about="http://www.example.org/camouflage#SimilarityMetric">
        <rdfs:label>SimilarityMetric</rdfs:label>
        <rdfs:comment>Similarity measurements between organism and environment</rdfs:comment>
    </owl:Class>

    <!-- LightingCondition: Environmental lighting -->
    <owl:Class rdf:about="http://www.example.org/camouflage#LightingCondition">
        <rdfs:label>LightingCondition</rdfs:label>
        <rdfs:comment>Lighting context during observation</rdfs:comment>
    </owl:Class>

    <!-- ========================================== -->
    <!--          OBJECT PROPERTIES                 -->
    <!-- ========================================== -->

    <!-- hasColor: Entity has color (both organism and environment) -->
    <owl:ObjectProperty rdf:about="http://www.example.org/camouflage#hasColor">
        <rdfs:label>hasColor</rdfs:label>
        <rdfs:comment>Links organism or environment to shared color nodes</rdfs:comment>
        <rdfs:domain>
            <owl:Class>
                <owl:unionOf rdf:parseType="Collection">
                    <rdf:Description rdf:about="http://www.example.org/camouflage#Organism"/>
                    <rdf:Description rdf:about="http://www.example.org/camouflage#Environment"/>
                </owl:unionOf>
            </owl:Class>
        </rdfs:domain>
        <rdfs:range rdf:resource="http://www.example.org/camouflage#Color"/>
    </owl:ObjectProperty>

    <!-- hasTexture: Entity has texture -->
    <owl:ObjectProperty rdf:about="http://www.example.org/camouflage#hasTexture">
        <rdfs:label>hasTexture</rdfs:label>
        <rdfs:comment>Links organism or environment to shared texture nodes</rdfs:comment>
        <rdfs:domain>
            <owl:Class>
                <owl:unionOf rdf:parseType="Collection">
                    <rdf:Description rdf:about="http://www.example.org/camouflage#Organism"/>
                    <rdf:Description rdf:about="http://www.example.org/camouflage#Environment"/>
                </owl:unionOf>
            </owl:Class>
        </rdfs:domain>
        <rdfs:range rdf:resource="http://www.example.org/camouflage#Texture"/>
    </owl:ObjectProperty>

    <!-- hasPattern: Organism has pattern -->
    <owl:ObjectProperty rdf:about="http://www.example.org/camouflage#hasPattern">
        <rdfs:label>hasPattern</rdfs:label>
        <rdfs:comment>Organism exhibits specific body pattern</rdfs:comment>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#Organism"/>
        <rdfs:range rdf:resource="http://www.example.org/camouflage#Pattern"/>
    </owl:ObjectProperty>

    <!-- observedIn: Organism observed in environment -->
    <owl:ObjectProperty rdf:about="http://www.example.org/camouflage#observedIn">
        <rdfs:label>observedIn</rdfs:label>
        <rdfs:comment>Organism was observed in specific environment</rdfs:comment>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#ObservationContext"/>
        <rdfs:range rdf:resource="http://www.example.org/camouflage#Environment"/>
    </owl:ObjectProperty>

    <!-- hasOrganism: Observation context links to organism -->
    <owl:ObjectProperty rdf:about="http://www.example.org/camouflage#hasOrganism">
        <rdfs:label>hasOrganism</rdfs:label>
        <rdfs:comment>Observation context references specific organism</rdfs:comment>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#ObservationContext"/>
        <rdfs:range rdf:resource="http://www.example.org/camouflage#Organism"/>
    </owl:ObjectProperty>

    <!-- hasCamouflageAssessment: Environment has camouflage assessment -->
    <owl:ObjectProperty rdf:about="http://www.example.org/camouflage#hasCamouflageAssessment">
        <rdfs:label>hasCamouflageAssessment</rdfs:label>
        <rdfs:comment>Environment has associated camouflage assessment</rdfs:comment>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#Environment"/>
        <rdfs:range rdf:resource="http://www.example.org/camouflage#CamouflageAssessment"/>
    </owl:ObjectProperty>

    <!-- hasSimilarity: Assessment has similarity metrics -->
    <owl:ObjectProperty rdf:about="http://www.example.org/camouflage#hasSimilarity">
        <rdfs:label>hasSimilarity</rdfs:label>
        <rdfs:comment>Camouflage assessment has quantitative similarity measurements</rdfs:comment>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#CamouflageAssessment"/>
        <rdfs:range rdf:resource="http://www.example.org/camouflage#SimilarityMetric"/>
    </owl:ObjectProperty>

    <!-- hasLightingCondition: Environment lighting -->
    <owl:ObjectProperty rdf:about="http://www.example.org/camouflage#hasLightingCondition">
        <rdfs:label>hasLightingCondition</rdfs:label>
        <rdfs:comment>Environment has specific lighting conditions</rdfs:comment>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#Environment"/>
        <rdfs:range rdf:resource="http://www.example.org/camouflage#LightingCondition"/>
    </owl:ObjectProperty>

    <!-- ========================================== -->
    <!--          DATA PROPERTIES                   -->
    <!-- ========================================== -->

    <!-- Color/Texture identifiers -->
    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#colorName">
        <rdfs:label>colorName</rdfs:label>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#Color"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#textureName">
        <rdfs:label>textureName</rdfs:label>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#Texture"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <!-- Similarity metrics -->
    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#colorSimilarityValue">
        <rdfs:label>colorSimilarityValue</rdfs:label>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#SimilarityMetric"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#textureSimilarityValue">
        <rdfs:label>textureSimilarityValue</rdfs:label>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#SimilarityMetric"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#contrastDifferenceValue">
        <rdfs:label>contrastDifferenceValue</rdfs:label>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#SimilarityMetric"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    </owl:DatatypeProperty>

    <!-- Camouflage assessment properties (NOW ON ENVIRONMENT) -->
    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#camouflageScore">
        <rdfs:label>camouflageScore</rdfs:label>
        <rdfs:comment>Overall camouflage effectiveness score (0-1)</rdfs:comment>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#CamouflageAssessment"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#confidence">
        <rdfs:label>confidence</rdfs:label>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#CamouflageAssessment"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#isCamouflaged">
        <rdfs:label>isCamouflaged</rdfs:label>
        <rdfs:comment>Boolean indicating if camouflage is present</rdfs:comment>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#CamouflageAssessment"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#boolean"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#camouflageType">
        <rdfs:label>camouflageType</rdfs:label>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#CamouflageAssessment"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <!-- Other properties -->
    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#name">
        <rdfs:label>name</rdfs:label>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#category">
        <rdfs:label>category</rdfs:label>
        <rdfs:domain rdf:resource="http://www.example.org/camouflage#Organism"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#description">
        <rdfs:label>description</rdfs:label>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="http://www.example.org/camouflage#sourceFile">
        <rdfs:label>sourceFile</rdfs:label>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

</rdf:RDF>